{
  "name": "vue-webpack-boilerplate",
  "version": "1.0.0",
  "description": "A simple and basic Vuejs and Webpack 4 boilerplate",
  "private": true,
  "scripts": {
    "dev": "webpack-dev-server --inline --progress --open --config build/webpack.dev.config.js",
    "staging": "webpack-dev-server --inline --progress --open --config build/webpack.staging.config.js",
    "prod": "webpack-dev-server --inline --progress --open --config build/webpack.prod.config.js",
    "unit": "jest --config test/unit/jest.conf.js --coverage",
    "e2e": "node test/e2e/runner.js",
    "test": "npm run unit && npm run e2e",
    "build-prod": "webpack --config build/webpack.prod.config.js",
    "build-staging": "webpack --config build/webpack.staging.config.js"
  },
  "author": "Marco Ragno",
  "license": "ISC",
  "devDependencies": {
    "css-loader": "^3.4.2",
    "html-webpack-plugin": "^5.5.0",
    "vue-loader": "^15.8.3",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.8.3",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "vue": "^2.6.11",
    "vue-router": "^3.1.5"
  }
}
